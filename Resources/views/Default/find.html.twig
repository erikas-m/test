{% extends "IssueBundle::layout.html.twig" %}
{% block navLinks %}
    <li><a href="{{ path('issue_find_all', { user: user, repo: repo }) }}">List all</a></li>
    <li class="active"><a href="{{ path('issue_find_page', { user: user, repo: repo }) }}">Search</a></li>
    <li><a href="{{ path('issue_create', { user: user, repo: repo }) }}">Create</a></li>
{% endblock %}
{% block content %}
    <form id="form-search" class="form align-center" role="search" method="post" action="{{ path("issue_find", { user: user, repo: repo }) }}">
        <div class="form-group">
            <input type="text" name="term" class="form-control input-lg" placeholder="Search term">
        </div>
        <div class="form-group">
            <select class="form-control input-lg" name="status">
                <option value="open">Open</option>
                <option value="closed">Closed</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary btn-wide btn-lg">Search</button>
    </form>
{% endblock %}